pipeline{
    agent any
    environment{
        APP_NAME = "movies-api"
        MY_NAME = "nadav"
    }
    stages{
        stage('Clone'){
            steps{
                echo "====== Cloning movies-api repo ======"
                sh "mkdir movies-api"
                dir('movies-api'){
                    git branch: 'main', url: 'https://github.com/devopsPRO27/movies-api'
                }
            }
        }
        stage('Build'){
            steps{
                echo "====== Building the app ======"
                sh "docker build -f ./movies/Dockerfile -t ${MY_NAME}/${APP_NAME}:V1.${BUILD_NUMBER} ."
                sh "docker run -d -p 80:80 --name ${MY_NAME}-${APP_NAME} ${MY_NAME}/${APP_NAME}:V1.${BUILD_NUMBER}"
                // Add environment variable for the app's IP
                sh "export APP_HOST=\"\$(docker inspect --format='{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' ${MY_NAME}-${APP_NAME})\""
                sh "printenv APP_HOST"
                // Add environment variable for the app's port
                sh "export APP_PORT=\"80\""
            }
        }
        stage('Test'){
            steps{
                echo "====== Testing the app ======"
                dir('test'){
                    sh "docker build -t ${MY_NAME}/${APP_NAME}-test:V1.${BUILD_NUMBER} ."
                    sh "docker run --name ${MY_NAME}-${APP_NAME}-test ${MY_NAME}/${APP_NAME}-test:V1.${BUILD_NUMBER}"
                }
            }
            post{
                always{
                    sh "docker rm -f ${MY_NAME}/${APP_NAME}-test:V1.${BUILD_NUMBER}"
                }
            }
        }
        
        stage('Deploy'){
            steps{
                echo "====== Deploying the app ======"
            }
        }
    }
    post{
        always{
            sh "rm -fr *"
            sh "docker stop 13860f8588a683c26557542f08ed30bded987819e0b5b6ea457bd65f175f0c03"
            sh "docker images"
            sh "docker rmi -f `docker image ls | egrep \"^nadav\" | awk '{print\$3}'`"
            sh "docker images"
        }
    }
}
