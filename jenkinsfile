pipeline{
    agent any
    environment{
        APP_NAME = "movies-api"
    }
    stages{
        stage('Clone'){
            steps{
                echo "====== Cloning movies-api repo ======"
                sh "mkdir movies-api"
                dir('movies-api'){
                    git branch: 'main', url: 'https://github.com/devopsPRO27/movies-api'
                }
            }
        }
        stage('Build'){
            steps{
                echo "====== Building the app ======"
                sh "docker build -f ./movies/Dockerfile -t ${APP_NAME}:V1.${BUILD_NUMBER} ."
                sh "docker images"
            }
        }
        stage('Test'){
            steps{
                echo "====== Testing the app ======"
            }
        }
        stage('Deploy'){
            steps{
                echo "====== Deploying the app ======"
            }
        }
    }
    post{
        always{
            sh "rm -fr *"
        }
    }
}
