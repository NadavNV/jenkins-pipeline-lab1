pipeline{
    agent any
    stages{
        stage('cloning'){
            steps{
                sh "mkdir movies-api"
                git branch: 'main', url: 'https://github.com/devopsPRO27/movies-api'
            }
        }
        stage('build'){
            steps{
                echo "building the app"
            }
        }
        stage('test'){
            steps{
                echo "testing the app"
            }
        }
        stage('deploy'){
            steps{
                echo "deploying the app"
            }
        }
    }
    post{
        always{
            sh "rm -fr *"
        }
    }
}
